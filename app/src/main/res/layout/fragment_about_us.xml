            android:text="We are associate with" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/associate"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/gray"
            android:layout_marginTop="15dp"
            android:text="Shipping Partners" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/shipping_partners"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
           />

    </LinearLayout>
</ScrollView>